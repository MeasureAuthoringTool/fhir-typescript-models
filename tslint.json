{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "array-type": [true, "generic"],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": true,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-console": false,
    "ordered-imports": true,
    "semicolon": [
      true,
      "always"
    ]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
